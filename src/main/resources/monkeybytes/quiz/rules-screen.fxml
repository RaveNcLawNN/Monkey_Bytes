<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #f9f9f9;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">

    <!-- Singleplayer Mode Section -->
    <VBox layoutX="-2.0" prefHeight="503.0" prefWidth="372.0" style="-fx-background-color: #66cdaa; -fx-border-color: black; -fx-border-width: 1; -fx-padding: 15;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Singleplayer Mode" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="1. Each question has only one correct answer." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="2. Player has 30 seconds to answer each question." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="3. Once you select your answer, it cannot be undone." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="4. Answers cannot be submitted once the timer runs out." wrapText="true" />
        <Label prefHeight="18.0" prefWidth="282.0" style="-fx-font-size: 14px; -fx-text-fill: white;" text="5. Points are awarded based on correct answers." wrapText="true" />
    </VBox>

    <!-- Multiplayer Mode Section -->
    <VBox layoutX="368.0" prefHeight="503.0" prefWidth="434.0" style="-fx-background-color: #ff69b4; -fx-border-color: black; -fx-border-width: 1; -fx-padding: 15;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Multiplayer Mode" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="1. Each question has only one correct answer." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="2. Players have 30 seconds to answer each question." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="3. Both players are given the same question; ensure the other player cannot see your answer." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="4. Once you select your answer, it cannot be undone." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="5. Answers cannot be submitted once the timer runs out." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="6. Points are awarded based on correct answers." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="7. The player with the higher score wins the game." wrapText="true" />
    </VBox>

          <!-- "Understood" Button -->
    <Button layoutX="319.0" layoutY="430.0" prefHeight="40.0" prefWidth="163.0" style="-fx-background-color: #add8e6; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;" text="Understood" />
</AnchorPane>
