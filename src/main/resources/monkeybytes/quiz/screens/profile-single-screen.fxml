<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../../../styles/screen-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeybytes.quiz.controller.ProfileSingleController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Label text="Create or choose Profile" styleClass="headerLabel"/>
            <TextField fx:id="newProfileTextField" promptText="Create New Profile" styleClass="textField" prefWidth="300.0" maxWidth="300.0"/>
            <Button fx:id="createProfileButton" text="Create" styleClass="guiButton"/>
            <ComboBox fx:id="profileComboBox" promptText="Choose Profile" prefWidth="300.0"/>
            <Button fx:id="nextButton" text="Continue" styleClass="guiButton"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
