<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../../../styles/screen-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeybytes.quiz.controller.screen.ProfileMultiController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
            <children>
                <Label styleClass="headerLabel" text="Player 1: Choose or Create Profile" />
                <TextField fx:id="player1ProfileTextField" maxWidth="300.0" prefWidth="300.0" promptText="Create New Profile (Player 1)" styleClass="textField" />
                <Button fx:id="createPlayer1ProfileButton" styleClass="guiButton" text="Create (Player 1)" />
                <ComboBox fx:id="player1ProfileComboBox" prefWidth="300.0" promptText="Choose Profile (Player 1)" />

                <Label styleClass="headerLabel" text="Player 2: Choose or Create Profile" />
                <TextField fx:id="player2ProfileTextField" maxWidth="300.0" prefWidth="300.0" promptText="Create New Profile (Player 2)" styleClass="textField" />
                <Button fx:id="createPlayer2ProfileButton" styleClass="guiButton" text="Create (Player 2)" />
                <ComboBox fx:id="player2ProfileComboBox" prefWidth="300.0" promptText="Choose Profile (Player 2)" />

                <Button fx:id="nextButton" styleClass="guiButton" text="Choose Topic" />
            </children>
        </VBox>
    </children>
</AnchorPane>
