<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../../../styles/screen-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeybytes.quiz.controller.screen.ProfileMultiController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" prefHeight="600.0" prefWidth="800.0">
            <children>
                <Label text="Player 1: Choose or Create Profile" styleClass="headerLabel"/>
                <TextField fx:id="player1ProfileTextField" promptText="Create New Profile (Player 1)" styleClass="textField" prefWidth="300.0" maxWidth="300.0"/>
                <Button fx:id="createPlayer1ProfileButton" text="Create (Player 1)" styleClass="guiButton"/>
                <ComboBox fx:id="player1ProfileComboBox" promptText="Choose Profile (Player 1)" prefWidth="300.0"/>

                <Label text="Player 2: Choose or Create Profile" styleClass="headerLabel"/>
                <TextField fx:id="player2ProfileTextField" promptText="Create New Profile (Player 2)" styleClass="textField" prefWidth="300.0" maxWidth="300.0"/>
                <Button fx:id="createPlayer2ProfileButton" text="Create (Player 2)" styleClass="guiButton"/>
                <ComboBox fx:id="player2ProfileComboBox" promptText="Choose Profile (Player 2)" prefWidth="300.0"/>

                <Button fx:id="nextButton" text="Start Game!" styleClass="guiButton"/>
            </children>
        </VBox>
    </children>
</AnchorPane>