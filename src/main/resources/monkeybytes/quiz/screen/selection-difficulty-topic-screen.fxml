<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../../../styles/screen-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeybytes.quiz.controller.screen.SelectionDiffTopController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" prefHeight="600.0" prefWidth="800.0">
            <children>
                <Label text="Choose Category and Difficulty" styleClass="headerLabel"/>
                <ComboBox fx:id="categoryComboBox" promptText="Category" prefWidth="300.0"/>
                <ComboBox fx:id="difficultyComboBox" promptText="Difficulty" prefWidth="300.0"/>
                <Button fx:id="startQuizButton" text="Start Quiz!" styleClass="guiButton"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
