<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../../../styles/screen-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeybytes.quiz.controller.screen.SelectionDiffTopController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
            <children>
                <Label fx:id="chooseCatDiffAlert" styleClass="headerLabel" text="Choose Category and Difficulty" />
                <ComboBox fx:id="categoryComboBox" prefWidth="300.0" promptText="Category" />
                <ComboBox fx:id="difficultyComboBox" prefWidth="300.0" promptText="Difficulty" />
                <Button fx:id="startQuizButton" styleClass="guiButton" text="Start Quiz!" />
            </children>
        </VBox>
    </children>
</AnchorPane>
